generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Perfil {
  ADMIN
  EMPRESA
  CANDIDATO
}

model Usuario {
  id_usuario Int @id @default(autoincrement())
  perfil Perfil
  nome String
  email String @unique
  senha String
  cpf String? @unique
  cnpj String? @unique
  criado_em DateTime @default(now())
  atualizado_em DateTime @updatedAt

  vagas_criadas Vaga[]
  eventos_criados Evento[]
  Token Token[]
  Sessao Sessao[]
}

model Vaga {
  id_vaga Int @id @default(autoincrement())
  titulo String
  descricao String
  localizacao String?
  salario Float?
  data_publicacao DateTime @default(now())

  // FK
  id_empresa Int
  empresa Usuario @relation(fields: [id_empresa], references: [id_usuario])
}

model Evento {
  id_evento Int @id @default(autoincrement())
  titulo String
  localizacao String
  dataEvento DateTime
  criado_em DateTime @default(now())

  id_empresa Int
  empresa Usuario @relation(fields: [id_empresa], references: [id_usuario])
}

model Token {
  id_token Int @id @default(autoincrement())
  valor String @unique
  tipo String
  usado_em DateTime?
  ativo Boolean @default(true)

  id_usuario Int
  usuario Usuario @relation(fields: [id_usuario], references: [id_usuario])
}

model Sessao {
  id_sessao String @id
  id_usuario Int
  ativo Boolean
  data_criacao DateTime
  token String

  token_usuario Usuario @relation(fields: [id_usuario], references: [id_usuario])
}